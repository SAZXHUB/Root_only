class NetDub:
    def __init__(self):
        self.target_host = None
        self.target_ip = None
        self.target_port = 80
        self.attack_power = 1
        self.running = False
        self.processes = []
        self.threads = []
        
        # Check root privileges
        if os.geteuid() != 0:
            print(f"{Fore.RED}[!] This tool requires root privileges for maximum performance{Fore.RESET}")
            print(f"{Fore.YELLOW}[*] Run with: sudo python3 {sys.argv[0]}{Fore.RESET}")
            sys.exit(1)
    
    def banner(self):
